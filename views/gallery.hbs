{{#each products }}
<div class="row d-flex flex-row justify-content-center align-self-center">
  

<div class="col-sm-6 col-md-8">
        <div>
            <img class="w-100 mt-3" src="{{ imagePath }}"
         class="img-responsive" alt="Responsive image" class="img-responsive" alt="Responsive image" alt="..." class="img-responsive">
            <div class="caption mb-3">
                <h3 class="mt-2 ">{{ title }}</h3>
                <p class="description mb-0">{{ description }}</p>
                <a href="{{ imagePath }}" class="img-responsive " id="small-buttons-download" alt="Responsive image" download>Download</a>
            </div>
           

        </div>
    </div>
  
    </div>
 
 {{/each}}






