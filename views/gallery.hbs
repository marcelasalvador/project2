<h1>Gallery</h1>

{{#each products }}
<div class="row">
  
   <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="{{ imagePath }}" class="img-responsive" alt="Responsive image'" class="img-responsive" alt="Responsive image" alt="..." class="img-responsive">
            <div class="caption">
                <h3>{{ title }}</h3>
                <p class="description">{{ description }}</p>
                <div class="clearfix">
                    <div class="price pull-left">{{ price }}</div>
                    <form action="/cart/{{_id}}/add-item" method="post"><button class="btn btn-success pull-right" type="submit">Add to Cart</button></form>
                    
                </div>
            </div>
        </div>
    </div>
   
 {{/each}}

